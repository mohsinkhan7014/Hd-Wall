<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp"
            android:onClick="natureCardClicked">

            <TextView
                android:id="@+id/nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Nature" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp"
            android:onClick="carCardClicked">

            <TextView
                android:id="@+id/car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Car" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp"
            android:onClick="loveCard">

            <TextView
                android:id="@+id/love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Love" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp"
            android:onClick="flower"
          >

            <TextView
                android:id="@+id/flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Flower" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/moon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Moon"
                android:onClick="moonCard"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Tech"
                android:onClick="techOnclicked"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp"
            android:onClick="foodCliked">

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Food"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="#B54040"
            app:cardCornerRadius="5dp"
            android:onClick="animCliked">

            <TextView
                android:id="@+id/animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Animal"
                />
        </androidx.cardview.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>

    <EditText
        android:layout_below="@+id/scrollView"
        android:id="@+id/searchEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="55dp"
        android:hint="Search"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:background="@drawable/round_shape"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:cursorVisible="false"
        />

    <ImageButton
        android:layout_marginLeft="260dp"
        android:layout_below="@+id/scrollView"
        android:id="@+id/btnsearch"
        android:layout_width="61dp"
        android:layout_height="38dp"
        android:src="@drawable/search_icon"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="55dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/round_shape"
        android:onClick="SearchItemOn"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/btnsearch"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="110dp"
        tools:ignore="MissingConstraints" />
</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>